[general]
accounts = Personal, Zimpler
maxsyncaccounts = 3
pythonfile = ~/.offlineimap.py

[Account Personal]
localrepository = personal_local
remoterepository = personal_remote

[Repository personal_local]
type = Maildir
localfolders = ~/Maildir/personal_mykolab

[Repository personal_remote]
type = IMAP
remotehost = imap.kolabnow.com
remoteuser = jonas.collberg@mykolab.com
remotepasseval = mailpasswd("mykolab")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
ssl = yes
maxconnections = 1
realdelete = no
folderfilter = lambda foldername: foldername in ['INBOX', 'Sent']

[Account Zimpler]
localrepository = zimpler_local
remoterepository = zimpler_remote

[Repository zimpler_local]
type = Maildir
localfolders = ~/Maildir/zimpler_gmail

[Repository zimpler_remote]
type = IMAP
remotehost = imap.gmail.com
remoteuser = jonas.collberg@zimpler.com
remotepasseval = mailpasswd("zimpler")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
ssl = yes
maxconnections = 1
realdelete = no
folderfilter = lambda foldername: foldername in ['INBOX', 'Sent']
