[module/avg-battery]
type = custom/script
exec = "count=$(acpi -b | wc -l); sum=$(acpi -b | egrep -o '[0-9]{1,3}%' | tr -d '%' | awk '{s+=$1} END {print s}'); echo Óáø: $(( sum / count ))"
interval = 5

